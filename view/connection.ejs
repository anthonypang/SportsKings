<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="../assets/stylesheets/style.css">
    <title>Connection</title>
</head>
<body>
    <%- include('partials/header') %>

    <div class="connection">
        <h2><%= data.connection.name %></h2>

        <img src="../assets/images/officeGuy.jpg" alt="John">
        <ul>
            <li><%= data.connection.creator %></li>
            <li><%= data.connection.date %></li>
            <li><%= data.connection.time %></li>
            <li><%= data.connection.location %></li>
        </ul>
        <h3>Details</h3>
        <p><%= data.connection.details %></p>
        <h3>Status</h3>
        <form method="POST" action="/savedConnections/rsvp">
            <input hidden name="id" value="<%=data.connection.id%>">
            <button type="submit"  name="rsvp" value="Going">
                Going
            </button>
            <button type="submit"  name="rsvp" value="Not Going">
                Not Going
            </button>
            <button type="submit"  name="rsvp" value="Undecided">
                Undecided
            </button>
        </form>
    </div>
   
    <%- include('partials/footer') %>
</body>
</html>